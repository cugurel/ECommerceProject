
@{
    ViewBag.Title = "Horizontal Layout";
    ViewBag.pTitle = "Horizontal Layout";
    ViewBag.pageTitle = "Horizontal";
    Layout = "~/Views/_Shared/Layouts/_layout_light_sidebar.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">Yeni Renk Formu</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Renk Yönetimi</a></li>
                    <li class="breadcrumb-item active">Yeni Renk</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Yeni Ürün Yarat</h4>
                <form action="/Colors/AddColor" id="myForm" method="post" onsubmit="AddColor(event)" enctype="multipart/form-data">
                    <div class="row mb-4">
                        <label for="projectname" class="col-form-label col-lg-2">Renk İsmi</label>
                        <div class="col-lg-10">
                            <input id="projectname" name="ColorName" type="text" class="form-control">
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <label for="projectbudget" class="col-form-label col-lg-2">Renk Resmi</label>
                        <div class="col-lg-10">
                            <input name="File" type="file" class="form-control">
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-lg-10">
                            <button type="submit" class="btn btn-primary">Rengi Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function AddColor(e) {
        e.preventDefault();

        const swalWithBootstrapButtons = Swal.mixin({
            customClass: {
                confirmButton: 'btn btn-success',
                cancelButton: 'btn btn-danger'
            },
            buttonsStyling: false,
        })

        Swal.fire({
            title: 'Rengi kaydetmek istiyor musunuz?',
            icon: 'question',
            showCancelButton: true
        }).then(result => {
            if (result.isConfirmed) {
                const myForm = document.getElementById('myForm');
                myForm.submit();
            }
        })
    }
</script>
