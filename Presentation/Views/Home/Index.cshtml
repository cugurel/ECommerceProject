@using Entity.DTOs
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common;
@model IPagedList<ProductWithCategory>
@{
    ViewBag.Title = "Horizontal Layout";
    ViewBag.pTitle = "Horizontal Layout";
    ViewBag.pageTitle = "Horizontal";
    Layout = "~/Views/_Shared/Layouts/_layout_light_sidebar.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="row">
            <div class="col-md-3">
                <div class="card mini-stats-wid">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <p class="text-muted fw-medium" key="t-today-sells">Bugün Satış(Ciro)</p>
                                <h4 class="mb-0">0 ₺</h4>
                            </div>

                            <div class="flex-shrink-0 align-self-center">
                                <div class="mini-stat-icon avatar-sm rounded-circle bg-primary">
                                    <span class="avatar-title">
                                        <i class="bx bx-money font-size-24"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div>
                            <h7 class="text-muted">Dün</h7>&nbsp;<h7 class="text-muted"><strong>0 ₺</strong></h7>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card mini-stats-wid">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <p class="text-muted fw-medium" key="t-cash-situation">Kasa Durumu</p>
                                <h4 class="mb-0">0 ₺</h4>
                            </div>

                            <div class="flex-shrink-0 align-self-center">
                                <div class="avatar-sm rounded-circle bg-primary mini-stat-icon">
                                    <span class="avatar-title rounded-circle bg-primary">
                                        <i class="bx bxs-bank font-size-24"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div>
                            <h7 class="text-muted">Bu Ay Çıkan</h7>&nbsp;<h7 class="text-muted"><strong>0 ₺</strong></h7>
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="col-md-3">
                <div class="card mini-stats-wid">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <p class="text-muted fw-medium" key="t-registered-today">Müşteri Kaydı(Bugün)</p>
                                <h4 class="mb-0">1</h4>
                            </div>

                            <div class="flex-shrink-0 align-self-center">
                                <div class="avatar-sm rounded-circle bg-primary mini-stat-icon">
                                    <span class="avatar-title rounded-circle bg-primary">
                                        <i class="bx bx-user-plus font-size-24"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div>
                            <h7 class="text-muted">Dün</h7>&nbsp;<h7 class="text-muted"><strong>0</strong></h7>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card mini-stats-wid">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <p class="text-muted fw-medium" key="t-waiting-demand">Bekleyen Sipariş Talebi</p>
                                <h4 class="mb-0">0</h4>
                            </div>

                            <div class="flex-shrink-0 align-self-center">
                                <div class="avatar-sm rounded-circle bg-primary mini-stat-icon">
                                    <span class="avatar-title rounded-circle bg-primary">
                                        <i class="bx bx-support font-size-24"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div>
                            <h7 class="text-muted">Toplam Çözümlenen</h7>&nbsp;<h7 class="text-muted"><strong>0</strong></h7>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>
<!-- end row -->


<!-- end row -->

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Stoktaki Aktif Ürünler</h4><a href="/Products/AddProduct" class="btn btn-outline-primary btn-sm">Yeni Ürün Ekle</a>
                <div class="table-responsive mt-2">
                    <table class="table align-middle table-nowrap mb-2">
                        <thead class="table-light">
                            <tr>
                                
                                <th class="align-middle">Ürün Adı</th>
                                <th class="align-middle">Kategori</th>
                                <th class="align-middle">Stok Miktarı</th>
                                <th class="align-middle">Birim Fiyat</th>
                                <th class="align-middle">Ürün Detayı</th>
                                <th class="align-middle">Düzenle</th>
                                <th class="align-middle">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><a href="javascript: void(0);" class="text-body fw-bold">@item.ProductName</a> </td>
                                    <td>
                                        <span class="badge badge-pill badge-soft-success font-size-11">@item.CategoryName</span>
                                    </td>
                                    <td>
                                        @item.UnitsInStock
                                    </td>
                                    <td>
                                        @item.UnitPrice
                                    </td>
                                    <td>
                                        <a href="/Products/ProductDetail/@item.ProductId" class="btn btn-sm btn-outline-primary">Ürün Detayı</a>
                                    </td>
                                    <td>
                                        <a href="/Products/UpdateProduct/@item.ProductId" class="btn btn-sm btn-success">Düzenle</a>
                                    </td>
                                    <td>
                                        <a href="/Products/DeleteProduct/@item.ProductId" class="btn btn-sm btn-danger">Sil</a>
                                    </td>
                                </tr>
                            }
                            
                        </tbody>
                    </table>
                    @Html.PagedListPager((IPagedList)Model, page=>Url.Action("Index",new {page}),new PagedListRenderOptions {
                            LiElementClasses = new string[] { "page-item" },
                            PageClasses = new string[] { "page-link" }
                    })
                </div>
                <!-- end table-responsive -->
            </div>
        </div>
    </div>

</div>
<div class="modal fade transaction-detailModal" tabindex="-1" role="dialog" aria-labelledby="transaction-detailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="transaction-detailModalLabel">Order Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2">Product id: <span class="text-primary">#SK2540</span></p>
                <p class="mb-4">Billing Name: <span class="text-primary">Neal Matthews</span></p>

                <div class="table-responsive">
                    <table class="table align-middle table-nowrap">
                        <thead>
                            <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">
                                    <div>
                                        <img src="~/assets/images/product/img-7.png" alt="" class="avatar-sm">
                                    </div>
                                </th>
                                <td>
                                    <div>
                                        <h5 class="text-truncate font-size-14">Wireless Headphone (Black)</h5>
                                        <p class="text-muted mb-0">$ 225 x 1</p>
                                    </div>
                                </td>
                                <td>$ 255</td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <div>
                                        <img src="~/assets/images/product/img-4.png" alt="" class="avatar-sm">
                                    </div>
                                </th>
                                <td>
                                    <div>
                                        <h5 class="text-truncate font-size-14">Phone patterned cases</h5>
                                        <p class="text-muted mb-0">$ 145 x 1</p>
                                    </div>
                                </td>
                                <td>$ 145</td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <h6 class="m-0 text-right">Sub Total:</h6>
                                </td>
                                <td>
                                    $ 400
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <h6 class="m-0 text-right">Shipping:</h6>
                                </td>
                                <td>
                                    Free
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <h6 class="m-0 text-right">Total:</h6>
                                </td>
                                <td>
                                    $ 400
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- end modal -->
